<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UpdateActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:gravity="center"
        android:padding="7dp"
        android:text="편집"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!--나중에 바뀔거,선택시 태그변경 가능하게-->

        <ImageView
            android:id="@+id/iv_profile_update"
            android:layout_width="1650dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:padding="8dp"
            android:src="@drawable/shape_circle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <EditText

                android:id="@+id/et_tagname_update"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="태그"
                android:padding="10dp"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/btn_tagselect_update"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="선택" />

        </LinearLayout>


        <EditText
            android:maxLines="1"
            android:id="@+id/et_name_update"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:maxLength="5"
            android:singleLine="true"
            />

        <EditText
            android:maxLines="1"
            android:id="@+id/et_tel_update"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="phone"
            android:maxLength="13"
            android:singleLine="true"
            />

        <EditText
            android:maxLines="2"
            android:id="@+id/et_addr_update"
            android:layout_width="204dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            />

        <EditText
            android:maxLines="1"
            android:id="@+id/et_detail_update"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="완료" />

        <Button
            android:id="@+id/btn_back_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="뒤로가기" />

    </LinearLayout>


</LinearLayout>