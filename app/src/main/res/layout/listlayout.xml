<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tag_listlayout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/shape_circle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <ImageButton
            android:id="@+id/btn_like_listlayout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/shape_circle" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_profile_listlayout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/shape_circle"
        android:scaleType="fitCenter"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tag_listlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="태그" />

        <TextView
            android:id="@+id/tv_name_listlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="이름" />

        <TextView
            android:id="@+id/tv_tel_listlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="전화번호" />

        <TextView
            android:id="@+id/tv_address_listlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="주소" />

    </LinearLayout>


</LinearLayout>